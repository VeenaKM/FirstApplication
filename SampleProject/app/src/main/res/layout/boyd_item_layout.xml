<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:visibility="visible"
    android:id="@+id/boydLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tint="@color/black"
        android:src="@drawable/ic_phone"
        android:id="@+id/productImage"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productType"
        android:layout_toRightOf="@+id/productImage"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/layout"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="BOYD"
            android:textColor="@color/black"
            android:id="@+id/productName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="italic"
            android:id="@+id/reviewPolicy"
            android:text="Review Policy"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsLayout"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/productImage"
        android:layout_below="@+id/layout">
        <CheckBox
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:checked="true"
            android:layout_margin="8dp"
            android:text="@string/boyd_stiphend_eligibility"
            android:button="@drawable/cb_selector"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:checked="true"
            android:text="@string/device_enrolled_in_mdm"
            android:button="@drawable/cb_selector"
            android:layout_margin="8dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Invoice Image"
            android:paddingLeft="8dp"
            android:button="@drawable/cb_selector"
            android:layout_margin="8dp"
            android:id="@+id/cb3"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:padding="2dp"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/ic_camera"
            android:textAllCaps="true"
            android:layout_toRightOf="@+id/cb3"
            android:text="Snap Invoice Picture"
            android:id="@+id/snapPicture"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:background="@drawable/btn_view"
            android:layout_height="30dp" />
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
</android.support.v7.widget.CardView>
